ScreenManager:
    PinputScreen:
    AppScreen:
    ListScreen:
        id: list_screen

<PinputScreen>:
    name: "pinput"

    
<AppScreen>:
    name: "app_screen"
        
    md_bg_color: app.theme_cls.backgroundColor

    MDFloatLayout:    

        MDLabel:
            id: cons_infos
            text: root.labeltxt
            font_style: "Headline"
            role: "small"
            halign: "left"
            size_hint_y: None
            height: self.texture_size[1]
            text_size: self.width, None
            #size_hint: (1, 0.2)
            pos_hint: {"x": 0.05, "top": 0.95}

        #MDScrollView:
            #size_hint: (1, 1)
            #pos_hint: {"top": .9, "bottom": 0, "left": 0, "right": 1 }

            #MDList:
                #id: list_cons
          

    MDBoxLayout:
        orientation: 'horizontal'
        size_hint: (1, 0.3)
        padding: dp(40)
        spacing: dp(60)

        MDFabButton:
            icon: "view-list"
            style: "standard"            
            #on_release: root.list_consumptions(); app.root.current = "cons_list"
            on_release: root.uc()
        MDFabButton:
            icon: "coffee-maker-check"
            style: "standard"            
            on_release: root.confirm_coffee_request()
        MDFabButton:
            icon: "coffee"
            style: "standard"
            on_release: root.send_coffee_request()
  
<ListScreen>:
    name: "cons_list"
    md_bg_color: app.theme_cls.backgroundColor

    MDBoxLayout:
        orientation: 'vertical'
        size_hint: (1,1)

        MDScrollView:
            size_hint: (1, 1)
            pos_hint: {"top": .9, "bottom": 0, "left": 0, "right": 1 }
            MDList:
                #id: root.app_screen.list.cons





   


